{
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/home/index",
      "style": {
        "navigationStyle": "custom",
        "enablePullDownRefresh": true,
        "navigationBarTitleText": "首页",
        "backgroundColorTop": "#FFFFFF",
        "navigationBarTextStyle": "white"
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "Login"
      }
    },
    {
      "path": "pages/purchase/index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "采购订单"
      }
    },
    {
      "path": "pages/purchase/orderDetail",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "订单详情"
      }
    },
    {
      "path": "pages/stock/index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "报表"
      }
    },
    {
      "path": "pages/chart/index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "图表"
      }
    },
    {
      "path": "pages/uni/index",
      "style": {
        "navigationBarTitleText": "UNI-UI"
      }
    },
    {
      "path": "pages/test/index",
      "style": {
        "navigationBarTitleText": "Test"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "easycom": {
    "autoscan": true,
    "custom": {
      "^vue-file-(.*)": "packageName/path/to/vue-file-$1.vue", // 匹配node_modules内的vue文件
      "tui-(.*)": "thorui-uni/lib/thorui/tui-$1/tui-$1.vue",
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#3cc51f",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/home/index",
        "iconPath": "static/images/tab_home.png",
        "selectedIconPath": "static/images/tab_home_s.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/stock/index",
        "iconPath": "static/images/tab_home.png",
        "selectedIconPath": "static/images/tab_home_s.png",
        "text": "报表"
      },
      {
        "pagePath": "pages/chart/index",
        "iconPath": "static/images/tab_home.png",
        "selectedIconPath": "static/images/tab_home_s.png",
        "text": "图表"
      },
      {
        "pagePath": "pages/uni/index",
        "iconPath": "static/images/tab_home.png",
        "selectedIconPath": "static/images/tab_home_s.png",
        "text": "UNI-UI"
      },

      {
        "pagePath": "pages/login/index",
        "iconPath": "static/images/tab_home.png",
        "selectedIconPath": "static/images/tab_home_s.png",
        "text": "Login"
      }
    ]
  }
}
